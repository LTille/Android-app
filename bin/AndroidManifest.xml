<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.smashdishes.game"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.smashdishes.game.Loading"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.smashdishes.game.menu"
            android:label="@string/app_name" >
            <intent-filter>
              <action android:name="com.smashdishes.DishActivity" />
              <action android:name="com.smashdishes.rankinglist"/>
              <action android:name="com.smashdishes.introduction"/>

            </intent-filter>
        </activity>
       <activity
            android:name="com.smashdishes.game.LogActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.smashdishes.game.game"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.smashdishes.game.introduction"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.smashdishes.game.DishActivity"
            android:label="@string/app_name" >
        </activity>
        
         <activity
            android:name="com.smashdishes.game.logActivity"
            android:label="@string/app_name" >
        </activity>
        
         <activity
            android:name="com.smashdishes.game.rankinglist"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.smashdishes.game.register"
            android:label="@string/app_name" >
        </activity>
     
    </application>

</manifest>
